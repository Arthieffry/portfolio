<div id="tech" class="carousel slide carrousel-custom" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators bullet">
    <li data-target="#tech" data-slide-to="0" class="active"></li>
    <li data-target="#tech" data-slide-to="1"></li>
    <li data-target="#tech" data-slide-to="2"></li>
    <li data-target="#tech" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag('ruby_on_rails.png', alt: "ruby_on_rails", class: "img-carrousel") %>
      <div class="carousel-caption">
      </div>
    </div>

    <div class="item">
      <%= image_tag('react-redux.png', alt:"react-redux", class: "img-carrousel") %>
      <div class="carousel-caption">
      </div>
    </div>

    <div class="item">
      <%= image_tag('js-stack.png', alt: "js-stack", class: "img-carrousel") %>
      <div class="carousel-caption">
      </div>
    </div>

    <div class="item">
      <%= image_tag('html5-css3.png', alt:"react-redux", class: "img-carrousel") %>
      <div class="carousel-caption">
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#tech" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#tech" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
